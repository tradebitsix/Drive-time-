ENV=prod
SECRET_KEY=change_this_to_a_long_random_string_64+chars
ACCESS_TOKEN_EXPIRE_MINUTES=60
# Railway typically provides DATABASE_URL=postgres://...  (sync URL). We will convert automatically to async URL.
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DB
# comma-separated origins (include your Vercel domain + localhost dev)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.vercel.app
# seed admin (run scripts/seed_admin.py once after migrate)
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_PASSWORD=change_me_now
SEED_ADMIN_ROLE=admin